import java.util.Scanner;
public class Grados {
    static Scanner leer = new Scanner(System.in);
    public static void main(String[] args) {
        double F, C;
        System.out.println("Ingrese la cantidad de grados Celsius que desee convertir: ");
        C = leer.nextDouble();
        
        // Conversión de Celsius a Fahrenheit
        F = (9.0 / 5.0) * C + 32; // Asegúrate de que ambos números sean de punto flotante
        System.out.println("Los grados Celsius convertidos a Fahrenheit son " + F);
        leer.close();
    }
}

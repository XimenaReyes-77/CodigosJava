import java.util.Scanner;
public class VolumendeUnaesfera {
    static Scanner leer = new Scanner(System.in);
	public static void main(String[] args) {
	double Long, vol, radio;
	System.out.println("Ingrese la longitud de la esfera: ");
	Long = leer.nextDouble();
	radio = Long/(2*Math.PI);
	vol = (4.0/3.0)*Math.PI*(Math.pow(radio, 3));
	System.out.println("El volumen de la esfera es "+vol);
	}
}
